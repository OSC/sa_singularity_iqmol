BootStrap: docker
From: centos:7

%post
    yum install -y \
        wget \
        qt5-qtbase
    cd /
    wget -nc http://iqmol.org/download.php?get=iqmol-2.11.2-1.el7.centos.x86_64.rpm -O iqmol.rpm
    yum -y localinstall iqmol.rpm
    rm -f iqmol.rpm
    rm -rf /var/cache/yum/*

%runscript
    exec iqmol "$@"

